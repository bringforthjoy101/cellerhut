# Scanner Debug Configuration
# Enable debug logging for scanner services (default: false in production, true in development)
REACT_APP_DEBUG_SCANNERS=false

# Logging Configuration
# Control minimum log level: DEBUG|INFO|WARN|ERROR (default: DEBUG in dev, WARN in prod)
REACT_APP_LOG_LEVEL=WARN

# Log batching for performance (default: true)
REACT_APP_LOG_BATCHING=true

# Number of logs to batch before flushing (default: 10)
REACT_APP_LOG_BATCH_SIZE=10

# Milliseconds between automatic flushes (default: 1000)
REACT_APP_LOG_FLUSH_INTERVAL=1000

# Maximum buffer size before rotation (default: 100)
REACT_APP_LOG_BUFFER_SIZE=100

# Maximum length of log strings before truncation (default: 1000)
REACT_APP_LOG_MAX_STRING_LENGTH=1000

# Scanner Configuration
# The application now uses keyboard wedge scanners (USB/Bluetooth) and browser camera API
# No additional configuration required for barcode scanning